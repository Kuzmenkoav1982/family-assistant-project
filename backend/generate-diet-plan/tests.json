{
  "tests": [
    {
      "name": "OPTIONS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "GET not allowed",
      "method": "GET",
      "path": "/",
      "expectedStatus": 405,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "POST without body",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "Check without operationId",
      "method": "POST",
      "path": "/",
      "body": {"action": "check"},
      "expectedStatus": 400,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "Recipe without dish name",
      "method": "POST",
      "path": "/",
      "body": {"action": "recipe"},
      "expectedStatus": 400,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "Photo without dish name",
      "method": "POST",
      "path": "/",
      "body": {"action": "generate_photo"},
      "expectedStatus": 400,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    }
  ]
}
