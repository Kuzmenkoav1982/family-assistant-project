{
  "tests": [
    {
      "name": "CORS preflight OPTIONS",
      "method": "OPTIONS",
      "expectedStatus": 200,
      "expectedBody": "",
      "bodyMatcher": "exact"
    },
    {
      "name": "Unauthorized request without token",
      "method": "GET",
      "expectedStatus": 401,
      "expectedBody": {
        "success": false,
        "error": "Требуется авторизация"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Invalid token returns 401",
      "method": "POST",
      "headers": {
        "X-Auth-Token": "invalid-token-xyz"
      },
      "body": {
        "action": "subscribe",
        "subscription": {
          "endpoint": "https://fcm.googleapis.com/fcm/send/test",
          "keys": {
            "p256dh": "test-key",
            "auth": "test-auth"
          }
        }
      },
      "expectedStatus": 401,
      "expectedBody": {
        "success": false,
        "error": "Invalid or expired token"
      },
      "bodyMatcher": "partial"
    }
  ]
}